%%----- PAGE DIMENSIONS -----%%
%% For 0.75in margins.
\usepackage[margin=.75in]{geometry}
%% Removes paragraph indentation.
\setlength\parindent{0pt}
%% To keep page numbers at the bottom.
\pagestyle{plain}

%%----- FOR CUSTOM TYPOGRAPHY -----%%
%% Fontspec helps XeLaTeX load required fonts.
\usepackage{fontspec}
%% The below setting makes sure the new fonts still obey latex macros.
\defaultfontfeatures{Ligatures=TeX}
%% The T1 font is an 8-bit encoding and uses fonts with 256 glyphs (default, OT1, is 7-bit/128glyph).
%\usepackage[T1]{fontenc}
\setromanfont{Open Sans}
%% Define custom font for the section and subsection headers.
\newfontfamily\headerfont{Open Sans}
%\newfontfamily\headerfont{Helvetica Neue}
%% Define font for in-line code.
\setmonofont{Letter Gothic Std Medium}
%\DeclareTextCommandDefault{\nobreakspace}{\leavevmode\nobreak\ } 

%%----- FOR CUSTOM COLORS -----%%
\usepackage[usenames,dvipsnames,svgnames,table]{xcolor}
%% Define custom colors for the section and subsection headers.
\definecolor{DARKBLUE}{rgb}{.16,.44,.60}
\definecolor{TEAL}{rgb}{.05,.57,.71}
\definecolor{GREENGRAY}{rgb}{.53,.56,.55}
\definecolor{GB}{rgb}{.29,.50,.48}

%%----- TO APPLY CUSTOM TYPE/COLORS TO HEADERS -----%%
%% Titlesec allows for control over sectioning formats.
\usepackage{titlesec}
%% Apply the defined custom color and font to the section and subsection headers. 
\titleformat{\section}[block]
	{\Large\headerfont\color{GB}}
	{\thesection}
	{0em}
	{\MakeUppercase}
% \titleformat{\subsection}
% 	{\large\headerfont\color{TEAL}}
% 	{\thesubsection}
% 	{0em}
% 	{\itshape\MakeUppercase}
\titleformat{\subsection}
	{\large\headerfont\color{GREENGRAY}}
	{\thesubsubsection}
	{0em}
	{\MakeUppercase}
%% Sets vertical spacing surrounding section headers.
\titlespacing\section{0pt}{14pt plus 4pt minus 2pt}{6pt plus 2pt minus 2pt}

%%----- TO APPLY CUSTOM TYPE/COLORS TO TITLE -----%%
\newcommand*{\TitleFont}{
      \usefont{\encodingdefault}{\rmdefault}{m}{n}
      \fontsize{18}{18}
      \headerfont}

%%----- FOR CUSTOM LISTS/TABLES -----%%
%% To replace itemize's default bullets with cdots.
% \renewcommand{\labelitemi}{$\circ$}
%% To set the width of the tables to the page width.
\usepackage{tabularx}
%% For table spacing.
\setlength{\tabcolsep}{3pt} % Columns.
\renewcommand{\arraystretch}{1.75} % Rows.

